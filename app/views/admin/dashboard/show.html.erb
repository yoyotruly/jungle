<section class="admin-dashboard-index">
  <header class="page-header">
    <h1>Admin &raquo; Dashboard</h1>
  </header>

  <h4>Categories <span class="badge bg-success"><%= @categories.count %></span></h4>
  <table>
    <% @categories.each do |category| %>
      <tr><%= link_to category.name, category_path(category.id), class:"dropdown-item" %></tr>
    <% end %>
  </table>

  <h4 class="mt-4">Products <span class="badge bg-success"><%= @products.count %></span></h4>
  <table>
    <tr><%= link_to "See all products", admin_products_path, class:"dropdown-item" %></tr>
    <% @products.each do |product| %>
      <tr><%= link_to product.name, product_path(product.id), class:"dropdown-item" %></tr>
    <% end %>
  </table>
</section>